{%- include('components/header') %}
</div>
<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <!-- BlogPost Read -->
            <div class="admin-area text-end">
                <p>
                    <a class="btn btn-sm btn-secondary" href="/">Go Home</a>
                </p>
                {% if (user) { %}
                <a class="btn btn-sm btn-primary" href="/blog/post/{%= post.id %}/update">Update</a>
                <a class="btn btn-sm btn-danger" href="/blog/post/{%= post.id %}/delete"
                    onclick="return confirm('Are you sure?')">Delete</a>
                Published: {%= post.isPublished %}
                {% } %}
            </div>
            <article class="blog-post">
                <a href="/blog/post?filter[blogCategoryId]={%= post.blogCategoryId.id %}">{%= post.blogCategoryId.name
                    %}</a>
                <h2 class="display-5 mb-1">
                    <a href="/blog/post/{%= post.id %}" class="link-body-emphasis text-decoration-none">{%= post.title
                        %}</a>
                </h2>
                <p class="blog-post-meta">{%= post.createdAt.toUTCString() %}</p>
                {%- post.content %}
                <img src="{%= post.imageUrl %}" alt="{%= post.title %}"
                    style="width:360px; height:180px; float:left; margin: 0px 15px 15px 0px;">
            </article>
        </div>
    </div>
</main>
<!-- main end -->

{%- include('components/footer') %}